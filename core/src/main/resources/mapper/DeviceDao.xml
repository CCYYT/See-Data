    <!--通过groupId  查询用户组中管理的所有设备-->
    <select id="getDeviceListByGroupId" resultType="com.example.core.domain.Device">
        SELECT d.id,
               d.uuid,
               d.device_name,
               d.device_status,
               d.device_longitude,
               d.device_latitude,
               d.area_id,
               a.uuid AS area_uuid,
               d.create_time,
               d.info
        FROM s_device d
                 INNER JOIN s_area a ON d.area_id = a.id
        WHERE a.group_id = #{groupId};
    </select>
