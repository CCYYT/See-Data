     <!--查询uuid是否存在-->
     <select id="uuidIsExist" resultType="boolean">
        SELECT EXISTS (
            SELECT 0
            FROM s_device
            WHERE uuid = #{uuid}
        )
    </select>

    <!--查询单个-->
    <select id="queryByUuid" resultMap="DeviceMap">
        select
          id, uuid, device_name, device_status, device_longitude, device_latitude, area_id, (select uuid from s_device where id = area_id) as area_uuid, create_time, info
        from s_device
        where uuid = #{uuid}
    </select>

