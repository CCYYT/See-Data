    <!--通过groupId  查询用户组中管理的所有设备和设备的数据类型-->
    <select id="getDeviceAndDataTypeListByGroupId" resultType="com.example.core.domain.Device">
        SELECT
            d.id,
            d.uuid,
            d.device_name,
            d.device_status,
            d.device_longitude,
            d.device_latitude,
            d.area_id,
            a.uuid AS area_uuid,
            a.area_name,
            dd.data_type_id,
            d.create_time,
            d.info,
            dt.data_type,
            dt.data_max,
            dt.data_min,
            dt.chart_sort,
            dt.info AS data_type_info
        FROM s_device d
                 INNER JOIN s_area a ON d.area_id = a.id
                 LEFT JOIN (SELECT DISTINCT device_id, data_type_id FROM s_device_data) dd ON d.id = dd.device_id
                 INNER JOIN s_data_type dt ON dd.data_type_id = dt.id
        WHERE a.group_id = #{groupId};
    </select>
    <!--查询可以收到设备UUID为 目标值 的用户UUID-->
    <select id="getUserUuidByDeviceUuid" resultType="java.lang.String">
        SELECT
            u.uuid
        FROM
            s_user u
                LEFT JOIN s_user_group ug ON ug.id = u.group_id
                LEFT JOIN s_area a ON a.group_id = ug.id
                LEFT JOIN s_device d ON d.area_id = a.id
        WHERE d.uuid = #{deviceUuid}
